# Server Configuration
PORT=3000
HOST=0.0.0.0

# SMTP Server Configuration (for receiving emails)
SMTP_PORT=2525
SMTP_HOST=0.0.0.0
SMTP_SECURE=false
SMTP_REQUIRE_AUTH=true
SMTP_MAX_CONNECTIONS=100
SMTP_MAX_MESSAGES=10

# SMTP Relay Configuration (for sending emails)
# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_RELAY_HOST=smtp.sendgrid.net
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=apikey

# Option 2: Gmail
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_gmail_app_password

# Option 3: Custom SMTP Server
# SMTP_RELAY_HOST=your_smtp_host
# SMTP_RELAY_PORT=587
# SMTP_RELAY_USER=your_smtp_username
# SMTP_RELAY_PASS=your_smtp_password

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mailserver
DB_NAME=mailserver

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Domain Configuration
DEFAULT_DOMAIN=kunalpatil.me

# Mail Configuration
MAX_ATTACHMENT_SIZE=10485760
MAIL_STORAGE_PATH=./storage/attachments
MAIL_QUEUE_ENABLED=false

# DKIM Configuration (Optional - for email authentication)
# DKIM_DOMAIN_NAME=kunalpatil.me
# DKIM_KEY_SELECTOR=default
# DKIM_PRIVATE_KEY=your_dkim_private_key_here

# Logging
LOG_LEVEL=info

